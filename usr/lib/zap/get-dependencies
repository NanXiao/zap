#!/bin/ksh
#

CFGDIR="/etc/zap"
ZAPLIBDIR="/usr/lib/zap"
ECHO="true"

case $1 in
-C)
	DESTROOT="$2"
	CTXARGS="-C ${DESTROOT}"
	PKGARGS="-R ${DESTROOT}"
	shift
	shift
	if [ ! -d "$DESTROOT" ]; then
	    echo "ERROR: alternate root $DESTROOT doesn't exist"
	    exit 1
	fi
	CFGDIR="${DESTROOT}/${CFGDIR}"
	;;
esac

case $1 in
-v)
	shift
	ECHO="echo"
	;;
esac

case $# in
1)
	PKG=`${ZAPLIBDIR}/resolve-alias ${CTXARGS} $1`
	;;
*)
	exit 1
	;;
esac

#
# given a package, return the dependencies present in the catalog
# with verbose, print all dependencies and installed status
# without verbose, print out uninstalled dependencies
#
for repo in `${ZAPLIBDIR}/zap-cfg ${CTXARGS} list-pkg-repos`
do
    if [ -f ${CFGDIR}/repositories/${repo}.catalog ]; then
	FPKG=`/usr/bin/nawk -F'|' '{if ($1 == npkg) print $3}' npkg=${PKG} ${CFGDIR}/repositories/${repo}.catalog`
	if [ -n "$FPKG" ]; then
	    $ECHO "Dependencies for ${PKG}"
	    for npkg in $FPKG
	    do
		/usr/bin/pkginfo ${PKGARGS} -q ${npkg}
		FOUNDPKG=$?
		if [ $FOUNDPKG -ne 0 ]; then
		    echo "${npkg}"
		else
		    $ECHO "${npkg} (installed)"
		fi
	    done
	    exit 0
	fi
    fi
done
